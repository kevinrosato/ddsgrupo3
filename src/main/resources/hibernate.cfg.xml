<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration> 
  <session-factory>
    <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
    <property name="connection.url">jdbc:sqlserver://localhost;instanceName=SQLEXPRESS;databaseName=Ejemplo;user=ej;password=12345;</property>
    
    <property name="dialect">org.hibernate.dialect.SQLServerDialect</property>
    <property name="hibernate.show_sql">true</property>
    
    <property name="hibernate.hbm2ddl.auto">create</property>
    
    <mapping resource="dds.grupo3.BaseDeDatos.POI.xml"/>
    <mapping resource="dds.grupo3.BaseDeDatos.Servicio.xml"/>
    <mapping resource="dds.grupo3.BaseDeDatos.Horario.xml"/>
    <mapping resource="dds.grupo3.BaseDeDatos.Ubicacion.xml"/>
	
  </session-factory>
</hibernate-configuration>