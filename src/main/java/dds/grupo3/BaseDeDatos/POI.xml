<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="dds.grupo3.Interface.POI" table="POI" >
  	<id column="poi_id" name="poi_id" type="integer"/>
    <property name="nombre" />
    <property name="ubicacion" />
    <property name="barrio" />
    <property name="calle" />
    <property name="callesPerpenIzq" />
    <property name="callesPerpenDer" />
    <property name="localidad" />
    <property name="provincia" />
    <property name="pais" />
    <property name="altura" />
    <property name="imagen" />
    
    <joined-subclass name="dds.grupo3.POIsSistem.Local" extends="POI">
				<key column="poi_id" />
				<property name="codigoPostal" />
   				<property name="departamento" />
    			<property name="piso" />
    			<property name="unidad" />
    			<property name="servicios" />
    			<property name="palabrasClaves" />
    			<joined-subclass name="dds.grupo3.POIsSistem.CGP" extends="Local">
    				<key column="poi_id" />
					<property name="numeroCGP" />
    			</joined-subclass>
    			<joined-subclass name="dds.grupo3.POIsSistem.SucursalBanco" extends="Local">
    				<key column="poi_id" />
    			</joined-subclass>
	</joined-subclass>
	<joined-subclass name="dds.grupo3.POIsSistem.ParadaColectivo" extends="POI">
				<key column="poi_id" />
				<property name="lineas" />
	</joined-subclass>
  </class>
</hibernate-mapping>
